<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Date and Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSessionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Mon, Nov 12"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/textSessionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cours"
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    android:textColor="?attr/colorPrimary"
                    android:background="@drawable/bg_circle_secondary_container"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/textTotals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="25 Students"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnDeleteSession"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="?attr/colorError"
                android:contentDescription="Delete Session" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginBottom="12dp"
            android:alpha="0.5"/>

        <!-- Bottom Row: Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Percentage Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/textSessionPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="92%"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_present"
                    android:textAppearance="?attr/textAppearanceLabelSmall"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

            <!-- Counts Chips -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/chipPresent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="P:20"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_chip_rounded"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/chipAbsent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="A:2"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_chip_rounded"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/chipLate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="L:3"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_chip_rounded"
                    android:backgroundTint="#FFC107"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/chipExcused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="E:1"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_chip_rounded"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
