<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“š TeacherHub"
            android:textColor="#1976D2"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="11sp"/>
    </LinearLayout>

    <!-- Schedule Section (Classes) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_todays_classes"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <ListView
        android:id="@+id/listSchedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/textNoSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_no_classes"
        android:textColor="#999999"
        android:textSize="10sp"
        android:visibility="gone"/>

    <!-- Divider -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- Tasks Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Pending Tasks"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <ListView
        android:id="@+id/listTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/textNoTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pending tasks âœ“"
        android:textColor="#999999"
        android:textSize="10sp"
        android:visibility="gone"/>

    <!-- Divider -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- Events Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Today's Events"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <ListView
        android:id="@+id/listEvents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/textNoEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No events today âœ“"
        android:textColor="#999999"
        android:textSize="10sp"
        android:visibility="gone"/>

    <!-- Divider -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- Replacements Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Replacements"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <ListView
        android:id="@+id/listReplacements"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/textNoReplacements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_no_replacements"
        android:textColor="#999999"
        android:textSize="10sp"
        android:visibility="gone"/>

</LinearLayout>
