<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“š TeacherHub"
            android:textColor="#1976D2"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="12sp"/>
    </LinearLayout>

    <!-- Events Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Today's Events"
        android:textColor="#333333"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:id="@+id/eventsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/textEvent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textEvent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textEvent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textNoEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No events today âœ“"
        android:textColor="#999999"
        android:textSize="11sp"
        android:layout_marginBottom="8dp"/>

    <!-- Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="4dp"/>

    <!-- Tasks Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Pending Tasks"
        android:textColor="#333333"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:id="@+id/tasksContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTask1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textTask2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textTask3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textNoTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pending tasks âœ“"
        android:textColor="#999999"
        android:textSize="11sp"
        android:layout_marginBottom="4dp"/>

    <!-- Divider -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="4dp"/>

    <!-- Schedule Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_todays_classes"
        android:textColor="#333333"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:id="@+id/scheduleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSchedule1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textSchedule2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textSchedule3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_item_background"
            android:padding="6dp"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textNoSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_no_classes"
        android:textColor="#999999"
        android:textSize="11sp"/>

</LinearLayout>
