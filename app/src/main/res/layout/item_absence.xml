<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginEnd="12dp"/>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Class Name & Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textClassName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="L3 G1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSessionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TD"
                    android:textSize="12sp"
                    app:chipMinHeight="24dp"/>
            </LinearLayout>

            <!-- Absence Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar_today_24dp"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/behavior_negative"/>

                <TextView
                    android:id="@+id/textAbsenceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent: 05/12/2024"
                    android:textSize="13sp"
                    android:textColor="@color/behavior_negative"/>
            </LinearLayout>

            <!-- Replacement Date (if scheduled) -->
            <LinearLayout
                android:id="@+id/layoutReplacement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar_today_24dp"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/primary"/>

                <TextView
                    android:id="@+id/textReplacementDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replacement: 12/12/2024"
                    android:textSize="13sp"
                    android:textColor="@color/primary"/>
            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="PENDING"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_status_pending"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"/>

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnSchedule"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_calendar_today_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/schedule_replacement"
                app:tint="@color/primary"/>

            <ImageButton
                android:id="@+id/btnComplete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_check_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/mark_completed"
                app:tint="@color/behavior_positive"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete_24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_delete"
                app:tint="@color/behavior_negative"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
