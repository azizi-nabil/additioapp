<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"> <!-- Remove padding here to use card properly -->

    <!-- Header Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”— Reduce Conflicts"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:trackCornerRadius="4dp"
                app:indicatorColor="?attr/colorPrimary"
                app:trackColor="#E0E0E0"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/textProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 / 27"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?android:textColorSecondary" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- INCOMING STUDENT CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#B3E5FC"
                app:cardBackgroundColor="#E1F5FE">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“¥ INCOMING STUDENT"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05"
                            android:textColor="#0277BD"
                            android:background="@drawable/bg_label_blue_soft"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textImportedName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aggoun Akram"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#01579B"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/textImportedDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="232334404319 | Ø¹Ù‚ÙˆÙ† Ø§ÙƒØ±Ù…"
                        android:fontFamily="monospace"
                        android:textSize="14sp"
                        android:textColor="#0277BD" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Arrow Indicator -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                app:tint="#BDBDBD"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MATCH WITH EXISTING:"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="?android:textColorSecondary"
                android:layout_marginBottom="8dp"/>

            <!-- EXISTING STUDENTS LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerExistingStudents"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:clipToPadding="false"
                android:background="@drawable/bg_rounded_border_grey"
                android:padding="4dp"
                android:layout_marginBottom="16dp" />

            <!-- ADD NEW OPTION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddAsNew"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âž•  Create as New Student"
                android:textColor="?attr/colorPrimary"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Footer Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FAFAFA"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:textColor="#757575"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish Import"
            android:visibility="gone"
            app:cornerRadius="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Match  â†’"
            android:enabled="false"
            app:cornerRadius="20dp"
            app:elevation="2dp"/>

    </LinearLayout>

</LinearLayout>
