<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Modern Header with Greeting -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="24dp"
                android:paddingBottom="48dp">

                <TextView
                    android:id="@+id/textGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_greeting_morning"
                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                    android:textColor="?attr/colorOnPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_university"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnPrimary"
                    android:alpha="0.9"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday, Nov 30"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnPrimary"
                        android:alpha="0.8"
                        android:drawableStart="@drawable/ic_calendar_today_24dp"
                        android:drawableTint="?attr/colorOnPrimary"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/textAcademicYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-2025"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/bg_rounded_gray"
                        android:backgroundTint="@color/home_header_overlay"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/university_logo"
                android:layout_gravity="top|end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="University Logo"/>
        </FrameLayout>

        <!-- Stats Cards (Overlapping Header) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="-32dp"
            android:baselineAligned="false">

            <!-- Classes Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardClasses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_school_24dp"
                        app:tint="#4CAF50"
                        android:background="@drawable/bg_circle_primary_container"
                        android:backgroundTint="@color/soft_green"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/textTotalClasses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_classes"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Students Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStudents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_person_24dp"
                        app:tint="#2196F3"
                        android:background="@drawable/bg_circle_secondary_container"
                        android:backgroundTint="@color/soft_blue"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/textTotalStudents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_students"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tasks Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_check_24dp"
                        app:tint="#FF9800"
                        android:background="@drawable/bg_circle_secondary_container"
                        android:backgroundTint="@color/soft_orange"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/textPendingTasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/planner_tasks"
                        android:textAppearance="?attr/textAppearanceLabelSmall"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Quick Actions Grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_quick_actions"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:paddingHorizontal="16dp">

            <!-- Attendance Action -->
            <LinearLayout
                android:id="@+id/actionAttendance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/soft_green">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_check_24dp"
                        app:tint="#4CAF50"
                        android:scaleType="centerInside"
                        android:padding="12dp"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attendance_title"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Planner Action -->
            <LinearLayout
                android:id="@+id/actionPlanner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/soft_blue">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_calendar_today_24dp"
                        app:tint="#2196F3"
                        android:scaleType="centerInside"
                        android:padding="12dp"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_planner"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Gradebook Action -->
            <LinearLayout
                android:id="@+id/actionGradebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/soft_orange">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_star_24dp"
                        app:tint="#FF9800"
                        android:scaleType="centerInside"
                        android:padding="12dp"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grades_title"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Reports Action -->
            <LinearLayout
                android:id="@+id/actionReports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/soft_pink">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_bar_chart_24dp"
                        app:tint="#E91E63"
                        android:scaleType="centerInside"
                        android:padding="12dp"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_reports"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

        </GridLayout>

        <!-- Today's Classes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_todays_classes"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btnViewSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_view_all"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:id="@+id/containerTodayClasses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Today's Replacements -->
        <LinearLayout
            android:id="@+id/headerTodayReplacements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_swap_horiz"
                app:tint="#FF5722"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_todays_replacements"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btnViewReplacements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_view_all"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTodayReplacements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/containerTodayReplacements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Upcoming Events -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_upcoming_events_title"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btnViewEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_view_all"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:id="@+id/containerUpcomingEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pending Tasks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_pending_tasks"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btnViewTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_view_all"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:id="@+id/containerPendingTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
