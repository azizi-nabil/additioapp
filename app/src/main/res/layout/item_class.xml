<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Color Strip -->
        <View
            android:id="@+id/colorStrip"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#2196F3"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textClassName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Class Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ImageView
                    android:id="@+id/btnMoreOptions"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_more_vert_24dp"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

            <!-- Location Row -->
            <TextView
                android:id="@+id/textClassLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Location"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Tags Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <!-- Year Tag -->
                <TextView
                    android:id="@+id/textClassYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024-2025"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_rounded_gray"
                    android:backgroundTint="#2196F3"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"/>

                <!-- Semester Tag -->
                <TextView
                    android:id="@+id/textClassSemester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S1"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_rounded_gray"
                    android:backgroundTint="#9C27B0"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp"
                    android:layout_marginStart="6dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <!-- Student Count -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rounded_gray"
                    android:backgroundTint="@color/soft_green"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="3dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_person_24dp"
                        app:tint="#4CAF50"/>

                    <TextView
                        android:id="@+id/textStudentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
