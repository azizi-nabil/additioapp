<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <!-- Link to Classes (multi-select) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_classes"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <TextView
            android:id="@+id/btnSelectClasses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="?attr/selectableItemBackground"
            android:text="@string/hint_select_classes"
            android:textSize="14sp"
            android:drawableEnd="@drawable/ic_expand_more"/>
            
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:chipSpacingHorizontal="8dp"/>
            
        <!-- Hidden spinner to maintain layout compatibility if needed during transition, or remove completely -->
        <Spinner
            android:id="@+id/spinnerClasses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <!-- Day of Week -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_day_of_week_required"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <Spinner
            android:id="@+id/spinnerDayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"/>

        <!-- Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_start_time_required"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/textScheduleStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_recent_history"
                    android:text="09:00"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_end_time_required"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/textScheduleEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableEnd="@android:drawable/ic_menu_recent_history"
                    android:text="10:30"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Session Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_session_type"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <Spinner
            android:id="@+id/spinnerSessionType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"/>

        <!-- Room -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_room_location"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editScheduleRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
