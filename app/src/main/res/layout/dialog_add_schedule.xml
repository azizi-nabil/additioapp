<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <!-- Link to Classes (multi-select) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_classes"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <TextView
            android:id="@+id/btnSelectClasses"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:background="?attr/selectableItemBackground"
            android:text="@string/hint_select_classes"
            android:textSize="14sp"
            android:drawableEnd="@drawable/ic_expand_more"/>
            
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:chipSpacingHorizontal="8dp"/>
            
        <!-- Hidden spinner to maintain layout compatibility if needed during transition, or remove completely -->
        <Spinner
            android:id="@+id/spinnerClasses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"/>

        <!-- Day of Week -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutDayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/label_day_of_week_required"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/inputDayOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutScheduleStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/label_start_time_required"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputScheduleStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09:00"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_recent_history"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutScheduleEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="@string/label_end_time_required"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputScheduleEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableEnd="@android:drawable/ic_menu_recent_history"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Session Type -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutSessionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/inputSessionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:hint="@string/label_session_type" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Room -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/hint_room_location"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editScheduleRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
