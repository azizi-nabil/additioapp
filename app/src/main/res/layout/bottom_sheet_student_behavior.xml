<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/drag_handle"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textSheetStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Student Name"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_add_behavior"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:backgroundTint="?attr/colorPrimaryContainer"
        app:icon="@drawable/ic_add"
        app:iconTint="?attr/colorOnPrimaryContainer"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textEmptyBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/behavior_empty"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBehaviorHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="16dp"/>

</LinearLayout>
