<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textStudentOrder"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <TextView
            android:id="@+id/textGroupBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="G1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_badge_group"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textStudentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Student Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ABSENT"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="?attr/colorError"
            android:visibility="gone"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutScore"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_mark"
            app:boxStrokeWidth="1dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="14sp"
                android:imeOptions="actionNext" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStatus"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:icon="@drawable/ic_more_vert_24dp"
            android:padding="0dp"
            app:iconPadding="0dp"
            android:minWidth="0dp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
