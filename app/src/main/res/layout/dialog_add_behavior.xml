<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_thumb_up_24dp"
            app:tint="?attr/colorPrimary"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Behavior"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textColor="?attr/colorOnSurface"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:layout_marginBottom="24dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Positive (+1)"
            style="@style/Widget.Material3.Chip.Filter"
            android:textColor="#2E7D32"
            app:chipBackgroundColor="@color/selector_chip_positive"
            app:chipIcon="@drawable/ic_thumb_up_24dp"
            app:chipIconTint="#2E7D32"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negative (-1)"
            style="@style/Widget.Material3.Chip.Filter"
            android:textColor="#C62828"
            app:chipIcon="@drawable/ic_thumb_down_24dp"
            app:chipIconTint="#C62828"
            app:chipIconVisible="true"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/selector_chip_negative"/>

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Category"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/editBehaviorCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Active Participation" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment (Optional)"
        app:startIconDrawable="@drawable/ic_comment_24dp"
        app:startIconTint="?attr/colorOnSurfaceVariant"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editBehaviorComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
