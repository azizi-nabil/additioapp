<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editClassName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_class_name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/editClassYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_class_year"
        android:inputType="text" />

    <EditText
        android:id="@+id/editClassLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_class_location"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/class_semester"
        android:textAppearance="?attr/textAppearanceBodyMedium" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSemester1"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/class_semester_1" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSemester2"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/class_semester_2" />

    </com.google.android.material.chip.ChipGroup>

</LinearLayout>
