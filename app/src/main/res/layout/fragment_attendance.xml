<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Date & Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_today"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Present: 0 | Absent: 0 | Late: 0"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnLockToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_lock"
                app:iconTint="?attr/colorOnSurface"/>

            <Button
                android:id="@+id/btnChangeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="18sp"
                style="@style/Widget.Material3.Button.TextButton"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Session Nature & Bulk Actions -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Session Nature -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attendance_session"
                    android:textSize="13sp"
                    android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/spinnerSessionNature"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!-- Bulk Actions -->
            <LinearLayout
                android:id="@+id/layoutBulkActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBulkPresent"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/label_all_present"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:icon="@drawable/ic_check_circle_24dp"
                    app:iconTint="@android:color/holo_green_dark"
                    android:textColor="@android:color/holo_green_dark"
                    app:strokeColor="@android:color/holo_green_dark"
                    android:textAlignment="textStart"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/btnBulkAbsent"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/label_all_absent"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:icon="@drawable/ic_cancel_24dp"
                    app:iconTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/holo_red_dark"
                    app:strokeColor="@android:color/holo_red_dark"
                    android:textAlignment="textStart"
                    android:layout_marginHorizontal="4dp"/>

                <Button
                    android:id="@+id/btnClearAll"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="@string/action_clear"
                    android:textSize="12sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="?attr/colorError"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Filter by Status -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_all"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFilterPresent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_green_selector"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFilterAbsent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_red_selector"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFilterLate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_yellow_selector"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFilterExcused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_blue_selector"/>

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAttendance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        tools:listitem="@layout/item_attendance" />

</LinearLayout>
